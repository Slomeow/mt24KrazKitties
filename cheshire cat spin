#include <Servo.h>

Servo myservo;  //cat spin


const int buttonPin = 2; //alice steps on spo on ground to activate button
int buttonVal;
int pos = 0;

void setup() {
  myservo.attach(9);  //attaches cat servo to pin 9
  pinMode(buttonPin, INPUT);
}

void loop() {
  if(digitalRead(buttonPin) == LOW){
   pos = 180;
    myservo.write(pos);              // tell servo to go to position in variable 'pos'
    delay(15);             
   
    }else{
      pos = 0;
       delay(15);
      myservo.write(pos);  
  }
}
